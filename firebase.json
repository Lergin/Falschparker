{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "packages/@lergin/hh-report-firebase-functions",
    "predeploy": [
      "npm --prefix packages/@lergin/hh-report-firebase-functions run build"
    ]
  },
  "hosting": {
    "predeploy": "npm run build_frontend",
    "public": "packages/@lergin/hh-report-frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": [
    {
      "target": "main",
      "rules": "storage.rules"
    },
    {
      "target": "falschparker",
      "rules": "storage.rules"
    }
  ]
}
