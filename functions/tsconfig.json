{
  "compilerOptions": {
    "lib": ["esnext", "DOM"],
    "module": "commonjs",
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "outDir": "build",
    "sourceMap": false,
    "target": "es2017",
    "resolveJsonModule": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
