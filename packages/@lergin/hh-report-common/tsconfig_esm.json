{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "esnext",
    "noImplicitReturns": true,
    "outDir": "dist/esm",
    "sourceMap": false,
    "esModuleInterop": true,
    "target": "es2017",
    "declaration": true,
    "declarationDir": "dist/types",
    "types": [
      "node"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
